# API Configuration
VITE_API_BASE_URL=http://localhost:8000/api

# Google OAuth (Optional)
VITE_GOOGLE_CLIENT_ID=your_google_client_id_here

# App Configuration
VITE_APP_NAME="Who's That Pokémon"
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION="A modern Pokémon guessing game with real-time leaderboards"

# Development
VITE_DEBUG=true
VITE_LOG_LEVEL=debug

# PWA Configuration
VITE_PWA_NAME="Who's That Pokémon"
VITE_PWA_SHORT_NAME="Pokémon Guesser"
VITE_PWA_DESCRIPTION="Guess Pokémon from silhouettes and compete on leaderboards!"
VITE_PWA_THEME_COLOR="#3B82F6"
VITE_PWA_BACKGROUND_COLOR="#F8FAFC"

# Analytics (Optional)
VITE_GOOGLE_ANALYTICS_ID=your_ga_id_here
VITE_SENTRY_DSN=your_sentry_dsn_here

# Feature Flags
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_ERROR_REPORTING=false
VITE_ENABLE_OFFLINE_MODE=true
VITE_ENABLE_PUSH_NOTIFICATIONS=false
